{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "typeRoots": [
            "@material-ui/core",
            "@material-ui/icons"
        ]
    },
    "include": [
        "src"
    ]
}